generator client {
  provider = "prisma-client-js"
} 

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Department {
  id_department Int           @id
  nama          String        @unique
  dosen         Dosen[]
  pengabdian    Pengabdian[]
  penelitian    Penelitian[]
}

model Dosen {
  id               Int         @id @default(autoincrement())
  nidn             String?     @unique
  nama             String
  role             String?
  scopusId         String?
  orcidId          String?
  googleScholarId  String?
  department       Department  @relation(fields: [id_department], references: [id_department])
  id_department    Int
  pengabdian       Pengabdian[]
  penelitian       Penelitian[]
}

model Pengabdian {
  id_data         Int        @id
  judul           String
  penulisExternal String
  penulis         Dosen      @relation(fields: [penulisId], references: [id])
  penulisId       Int
  tingkat         String
  url             String
  department      Department @relation(fields: [id_department], references: [id_department])
  id_department   Int
  tahun           Int
}

model Penelitian {
  id_data         Int        @id
  judul           String
  penulisExternal String
  penulis         Dosen      @relation(fields: [penulisId], references: [id])
  penulisId       Int
  tingkat         String
  url             String
  department      Department @relation(fields: [id_department], references: [id_department])
  id_department   Int
  tahun           Int
}